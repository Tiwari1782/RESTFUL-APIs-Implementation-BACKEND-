<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ALL POSTS</title>
    <link rel="stylesheet" href="/CSS/style.css" />
  </head>
  <body>
    <nav class="navbar">
      <div class="logo">QuoraClone</div>

      <div class="nav-links">
        <a href="/posts">Home</a>
        <a href="/posts/new">Create</a>
        <button id="darkToggle">ðŸŒ™</button>
      </div>
    </nav>

    <h1>QUORA POSTS</h1>
    <% for(let post of posts) { %>
    <div class="post">
      <h3 class="user">@ <%= post.username %></h3>
      <h4 class="content"><%= post.content %></h4>
      <br /><br />
      <a href="http://localhost:8080/posts/<%= post.id %>">See in detail</a>
      <a href="http://localhost:8080/posts/<%= post.id %>/edit"
        >Edit the post</a
      >
      <form action="/posts/<%= post.id %>?_method=DELETE" method="post">
        <button>DELETE POST</button>
      </form>
    </div>
    <% } %>

    <br />
    <br />
    <a href="http://localhost:8080/posts/new" class="create-post">
      + Create New Post
    </a>
    <script src="/JS/script.js"></script>

  </body>
</html>
